{
  "name": "Container",
  "description": "Generate a stateful component",
  "add": [
    {
      "dirPath": "src/containers/[ModuleName]",
      "files": [
        {
          "fileName": "[ModuleName].tsx",
          "template": [
            "import React, { FC, Fragment } from 'react';",
            "",
            "const [ModuleName]: FC = () => {",
            "  return <Fragment>[ModuleName]</Fragment>;",
            "};",
            "",
            "export default [ModuleName];",
            ""
          ]
        },
        {
          "fileName": "index.ts",
          "template": ["export { default } from './[ModuleName]';", ""]
        }
      ]
    }
  ]
}
